<div class="purchase-history">
{{#each purchases as |purchase|}}
  <section class="order" data-id="{{purchase._id}}">
    Order Date: <span class="order-date" data-date="{{purchase.updatedAt}}">{{purchase.updatedAt}}</span>
    <div class="order-detail">
      <header>Items</header>
      <ol class="items">
      {{#each purchase.items as |item|}}
        <li class="item">{{item.name}}
          <span class="price">{{item.price}}</span>
        </li>
      {{/each}}
      </ol>
    </div>
    <div class="total">Total:
      <span class="price">{{purchase.totalCost}}</span>
    </div>
  </section>
{{/each}}
</div>
