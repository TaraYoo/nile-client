{{#each products as |product| }}
<div class="product-wrapper">
  <div class="product col-6 col-lg-3 shadow-lg p-3 mb-5 bg-white rounded" data-id="{{product._id}}">
    <div class="thumbnail">
      <img src="{{product.imageUrl}}" alt="{{product.title}}">
    </div>
    <div class="caption">
      <div class="title">{{product.title}}</div>
      <div class="author">by {{product.author}}</div>
    </div>
    <div class="price">
      <span class="item-price">{{product.price}}</span>
    </div>
    <div class="add-item">
      <button class="btn btn-outline-primary btn-target-{{product._id}}" data-id="{{product._id}}">Add to Cart</button>
    </div>
  </div>
</div>
{{/each}}
